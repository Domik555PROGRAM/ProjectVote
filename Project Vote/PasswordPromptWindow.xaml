<Window x:Class="Project_Vote.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Ввод пароля" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f0f0f0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ввод пароля" FontSize="22" FontWeight="Bold" 
                   Foreground="#0066cc" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" x:Name="TestTitleTextBlock" FontSize="16" 
                   Text="Тест: Название теста" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="2" Text="Этот тест защищен паролем. Пожалуйста, введите пароль:" 
                   TextWrapping="Wrap" Margin="0,0,0,10"/>

        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <PasswordBox x:Name="PasswordBox" Padding="8,5" KeyDown="PasswordBox_KeyDown"/>
            
            <Button x:Name="TogglePasswordButton" Grid.Column="1" Content="👁" Width="40" BorderThickness="0"
                    Click="TogglePasswordVisibility_Click" Margin="5,0,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <TextBox x:Name="PasswordTextBox" Grid.Column="0" Padding="8,5" 
                    BorderThickness="1" Visibility="Collapsed" KeyDown="PasswordBox_KeyDown"
                    TextChanged="PasswordTextBox_TextChanged"/>
        </Grid>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ОК" Width="100" Height="32" Click="OkButton_Click" 
                    Background="#0066cc" Foreground="White" Margin="0,0,10,0" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Отмена" Width="100" Height="32" Click="CancelButton_Click" 
                    Background="#dddddd" Foreground="#333333" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window> 