<Window x:Class="Project_Vote.Golos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Создание опроса" Height="900" Width="850" MinWidth="750" MinHeight="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <LinearGradientBrush x:Key="ButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0"/>
            <GradientStop Color="#357ABD" Offset="1.0"/>
        </LinearGradientBrush>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для одиночного выбора (RadioButton) в виде кнопки -->
        <Style TargetType="RadioButton">
            <Setter Property="Background" Value="{StaticResource ButtonGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2D6EB8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,20,50,40">
                <TextBlock FontSize="24" FontWeight="Bold" Margin="0,20,0,20" HorizontalAlignment="Center">Создание опроса/теста</TextBlock>
                <!-- Название опроса -->
                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5">Название опроса/теста</TextBlock>
                <TextBox x:Name="TitleTextBox" MaxLength="200" Margin="0,0,0,0" Padding="8,5" FontSize="14" 
                         BorderBrush="#ccc" BorderThickness="1" TextChanged="TitleTextBox_TextChanged"/>
                <Grid Margin="0,0,0,15">
                    <TextBlock x:Name="TitleErrorText" Text="Пожалуйста, введите название опроса" Foreground="Red" 
                               Visibility="Collapsed" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="TitleCharCountText" Text="0/200" Foreground="#666" HorizontalAlignment="Right"/>
                </Grid>
                <!-- Описание опроса -->
                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5">Описание</TextBlock>
                <RichTextBox x:Name="DescriptionRichTextBox"
                         AcceptsReturn="True"
                         MinHeight="200"
                         Margin="0,0,0,15"
                         Padding="8,5"
                         FontSize="14"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         TextChanged="DescriptionRichTextBox_TextChanged"/>
                <!-- Тип опроса -->
                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5">Тип опроса/теста</TextBlock>
                <ComboBox x:Name="PollTypeComboBox" SelectedIndex="0" Margin="0,0,0,15" Padding="8,5" FontSize="14" 
                          SelectionChanged="PollTypeComboBox_SelectionChanged">
                    <ComboBoxItem>Голосование</ComboBoxItem>
                    <ComboBoxItem>Тест с вопросами и вариантами ответов</ComboBoxItem>
                </ComboBox>
                
                <!-- Дата окончания опроса/теста -->
                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5">Дата окончания опроса/теста</TextBlock>
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="EndDatePicker" SelectedDate="{Binding EndDate}"
                                FontSize="14" BorderBrush="#ccc" BorderThickness="1"/>
                    <CheckBox x:Name="NoLimitCheckBox" Grid.Column="1" Content="Без ограничения времени" 
                              Margin="10,0,0,0" VerticalAlignment="Center" Checked="NoLimitCheckBox_Checked" 
                              Unchecked="NoLimitCheckBox_Unchecked"/>
                </Grid>
                <TextBlock Text="Опрос/тест будет активен до конца выбранного дня или бессрочно при установке флажка" 
                           Foreground="#666" FontSize="12" Margin="0,0,0,15"/>
                
                <!-- Панель для пароля (общая для всех типов опросов/тестов) -->
                <StackPanel x:Name="PasswordPanel" Margin="0,0,0,15">
                    <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5">Пароль для доступа (необязательно)</TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <PasswordBox x:Name="PasswordBox" Padding="8,5" FontSize="14" BorderBrush="#ccc" BorderThickness="1"/>
                        
                        <Button x:Name="TogglePasswordButton" Grid.Column="1" Content="👁" Width="40" BorderThickness="0"
                                Click="TogglePasswordVisibility_Click" Margin="5,0,0,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        
                        <!-- Текстовое поле для отображения пароля (обычно скрыто) -->
                        <TextBox x:Name="PasswordTextBox" Grid.Column="0" Padding="8,5" FontSize="14" BorderBrush="#ccc" 
                                 BorderThickness="1" Visibility="Collapsed" TextChanged="PasswordTextBox_TextChanged"/>
                    </Grid>
                    
                    <TextBlock Text="Установите пароль для защиты опроса/теста. Пароль потребуется ввести перед прохождением." 
                               Foreground="#666" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Варианты для обычного опроса -->
                <StackPanel x:Name="OptionsPanel">
                    <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5">Кандидаты</TextBlock>
                    <ItemsControl x:Name="OptionsListBox" ItemsSource="{Binding ElementName=OptionsListBox, Path=ItemsSource}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#ccc" BorderThickness="1" Margin="0,5,0,10" Padding="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Имя кандидата -->
                                        <TextBlock Text="Имя кандидата:" Grid.Row="0" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                        <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                                                 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                                 Padding="8,5" FontSize="14" BorderBrush="#ccc" BorderThickness="1" 
                                                 Margin="0,0,0,10"/>
                                        
                                        <!-- Описание кандидата -->
                                        <TextBlock Text="Описание:" Grid.Row="1" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                        <TextBox Text="{Binding ImageDescription, UpdateSourceTrigger=PropertyChanged}" 
                                                 Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                 Padding="8,5" FontSize="14" BorderBrush="#ccc" BorderThickness="1" 
                                                 Margin="0,0,0,10" TextWrapping="Wrap" MinHeight="60"/>
                                        
                                        <!-- Кнопки для загрузки/удаления изображения -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                            <Button Content="Загрузить фото" Margin="0,0,10,0" 
                                                    Tag="{Binding}" Click="UploadOptionImage_Click"
                                                    IsEnabled="{Binding Text, Converter={StaticResource StringNotEmptyConverter}}"/>
                                            <Button Content="Удалить фото" Margin="0,0,10,0" 
                                                    Tag="{Binding}" Click="RemoveOptionImage_Click"
                                                    IsEnabled="{Binding HasImage}"/>
                                            <Button Content="Удалить кандидата" Background="#FF4040" Foreground="White" 
                                                    Tag="{Binding}" Click="RemoveOption_Click"/>
                                        </StackPanel>
                                        
                                        <!-- Отображение изображения -->
                                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                                BorderBrush="#ccc" BorderThickness="1" MinHeight="150" MaxHeight="200" 
                                                Margin="0,10,0,0" Visibility="{Binding HasImage, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Image Source="{Binding OptionImageSource}" Stretch="Uniform" Margin="5"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button x:Name="AddOptionButton" Content="Добавить кандидата" HorizontalAlignment="Left" Click="AddOption_Click" Margin="0,10,0,0"/>
                </StackPanel>
                <!-- Панель для теста с вопросами -->
                <StackPanel x:Name="QuestionsPanel" Visibility="Collapsed">
                    <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5">Вопросы</TextBlock>
                        <ItemsControl x:Name="QuestionsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                <Border BorderBrush="#ccc" BorderThickness="1" Margin="0,10" Padding="15">
                                        <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Вопрос:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <Button Grid.Column="1" Content="Удалить вопрос" Tag="{Binding}" Click="RemoveQuestion_Click" 
                                                    Background="#FF4040" Foreground="White" Margin="0,0,0,5"/>
                                        </Grid>
                                        <TextBox Text="{Binding QuestionText, UpdateSourceTrigger=PropertyChanged}" Padding="8,5" 
                                                 Margin="0,0,0,10" FontSize="14" BorderBrush="#ccc" BorderThickness="1"/>
                                        
                                        <!-- Секция для изображения вопроса -->
                                        <Expander Header="Изображение для вопроса" Margin="0,0,0,10" IsExpanded="False">
                                            <StackPanel Margin="0,10,0,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <Border Grid.Column="0" BorderBrush="#ccc" BorderThickness="1" MinHeight="200" MaxHeight="350">
                                                        <Image x:Name="QuestionImage" Stretch="Uniform" 
                                                               Source="{Binding QuestionImageSource}"
                                                               Margin="5"/>
                                                    </Border>
                                                    
                                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                        <Button Content="Загрузить" Margin="0,0,0,5" 
                                                                Tag="{Binding}" Click="UploadQuestionImage_Click"
                                                                IsEnabled="{Binding QuestionText, Converter={StaticResource StringNotEmptyConverter}}"/>
                                                        <Button Content="Удалить" Margin="0,0,0,5" 
                                                                Tag="{Binding}" Click="RemoveQuestionImage_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                                
                                                <TextBlock Text="Описание изображения:" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding ImageDescription, UpdateSourceTrigger=PropertyChanged}" 
                                                         Padding="8,5" FontSize="14" BorderBrush="#ccc" BorderThickness="1"/>
                                            </StackPanel>
                                        </Expander>
                                        
                                        <TextBlock Text="Варианты ответов:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ItemsControl ItemsSource="{Binding Options}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                    <StackPanel Margin="0,5,0,15">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <CheckBox IsChecked="{Binding IsCorrect}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            <TextBox Grid.Column="1" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                                                                    Padding="8,5" FontSize="14" BorderBrush="#ccc" BorderThickness="1"/>
                                                            <Button Grid.Column="2" Content="X" Tag="{Binding}" Click="RemoveOption_Click"/>
                                                        </Grid>
                                                        
                                                        <!-- Секция для изображения варианта ответа -->
                                                        <Expander Header="Изображение для варианта" Margin="20,5,0,0" IsExpanded="False">
                                                            <StackPanel Margin="0,10,0,0">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    
                                                                    <Border Grid.Column="0" BorderBrush="#ccc" BorderThickness="1" MinHeight="150" MaxHeight="250">
                                                                        <Image x:Name="OptionImage" Stretch="Uniform" Source="{Binding OptionImageSource}" Margin="5"/>
                                                                    </Border>
                                                                    
                                                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                                        <Button Content="Загрузить" Margin="0,0,0,5" 
                                                                                Tag="{Binding}" Click="UploadOptionImage_Click"
                                                                                IsEnabled="{Binding Text, Converter={StaticResource StringNotEmptyConverter}}"/>
                                                                        <Button Content="Удалить" Margin="0,0,0,5" 
                                                                                Tag="{Binding}" Click="RemoveOptionImage_Click"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                                
                                                                <TextBlock Text="Описание изображения:" Margin="0,5,0,2"/>
                                                                <TextBox Text="{Binding ImageDescription, UpdateSourceTrigger=PropertyChanged}" 
                                                                        Padding="8,5" FontSize="14" BorderBrush="#ccc" BorderThickness="1"/>
                                                            </StackPanel>
                                                        </Expander>
                                                    </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        <Button Content="Добавить вариант" HorizontalAlignment="Left" Click="AddOption_Click"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    <Button Content="Добавить вопрос" HorizontalAlignment="Left" Click="AddQuestion_Click"/>
                    </StackPanel>
                <!-- Кнопки внизу -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="SaveButton" Content="Сохранить" Width="120" Click="SaveButton_Click"/>
                    <Button x:Name="PreviewButton" Content="Предпросмотр" Width="120" Click="PreviewButton_Click"/>
                    <Button x:Name="CancelButton" Content="Отмена" Width="120" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
