<Window x:Class="Project_Vote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Project Vote" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        SizeChanged="Window_SizeChanged"
        PreviewMouseDown="Window_PreviewMouseDown"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.Resources>
        <!-- Ресурсы для градиента кнопок -->
        <LinearGradientBrush x:Key="ButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0"/>
            <GradientStop Color="#357ABD" Offset="1.0"/>
        </LinearGradientBrush>
        <Style x:Key="GradientButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter 
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TransparentBorderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter 
                                          HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WhiteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0066cc"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter 
                                          HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="HamburgerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Rectangle x:Name="Line1" Fill="White" Height="2" Width="24" Margin="0,-8,0,0">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="0" Y="0"/>
                                            <RotateTransform Angle="0"/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="Line2" Fill="White" Height="2" Width="24">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            <TranslateTransform X="0" Y="0"/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="Line3" Fill="White" Height="2" Width="24" Margin="0,8,0,0">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="0" Y="0"/>
                                            <RotateTransform Angle="0"/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="OpenSidePanelStoryboard">
            <ThicknessAnimation Storyboard.TargetName="SidePanel" 
                                Storyboard.TargetProperty="Margin" 
                                From="-300,0,0,0" To="0,0,0,0" 
                                Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <Storyboard x:Key="CloseSidePanelStoryboard">
            <ThicknessAnimation Storyboard.TargetName="SidePanel" 
                                Storyboard.TargetProperty="Margin" 
                                From="0,0,0,0" To="-300,0,0,0" 
                                Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#0066cc" Panel.ZIndex="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                    <Button x:Name="HamburgerButton" Grid.Column="0" Margin="5,0,0,0"
                            Style="{StaticResource HamburgerButtonStyle}" 
                            Click="HamburgerButton_Click" Panel.ZIndex="99999"/>
                    <TextBlock Grid.Column="1" Text="Голос.by" Foreground="White" 
                               FontSize="26" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,30,0"/>
                    <Border Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" 
                            Background="#ffffff" CornerRadius="20" Width="400" Height="36" Margin="259,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SearchBox" Grid.Column="0" BorderThickness="0" 
                                     Background="Transparent" Padding="15,5,5,5" 
                                     VerticalContentAlignment="Center"
                                     FontSize="14" Foreground="#555555" Grid.ColumnSpan="2" Margin="10,0,26,0"
                                     KeyDown="SearchBox_KeyDown"
                                     ToolTip="Для поиска тестов необходимо войти в систему"
                                     Tag="Поиск тестов (требуется авторизация)"/>
                            <Button Grid.Column="1" Width="36" Height="36" 
                                    Background="Transparent" BorderThickness="0" 
                                    Cursor="Hand" Padding="5"
                                    Click="SearchButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsPressed" Value="True">

                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Path Data="M13.3 14.7C9.9 17.1 5.1 16.9 2.1 14C-1.2 10.7 -1.2 5.3 2.1 2C5.4 -1.3 10.8 -1.3 14.1 2C17 5 17.2 9.7 14.8 13L22 20.2L20.2 22L13.3 14.7ZM12.1 12.1C14.6 9.6 14.6 5.4 12.1 2.9C9.6 0.4 5.4 0.4 2.9 2.9C0.4 5.4 0.4 9.6 2.9 12.1C5.4 14.6 9.6 14.6 12.1 12.1Z" 
              Fill="#888888" Stretch="Uniform" Width="16" Height="16" Margin="16,10,4,10"/>
                            </Button>
                        </Grid>
                    </Border>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0">
                        <Button x:Name="LoginButton" Content="Войти" Margin="5,0" 
                                Click="Button_Click_2"
                                Style="{StaticResource TransparentBorderButtonStyle}"/>
                        <TextBlock x:Name="SeparatorText" Text="|" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                        <Button x:Name="RegisterButton" Content="Регистрация" Margin="5,0" 
                                Click="Button_Click_1"
                                Style="{StaticResource WhiteButtonStyle}"/>
                        <Border BorderBrush="White" BorderThickness="0" Width="40" Height="40" CornerRadius="20" 
                                Margin="10,0" MouseDown="ProfileBorder_MouseDown">
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Изменить имя" Click="ChangeNameMenuItem_Click"/>
                                <MenuItem Header="Изменить аватарку" Click="ChangeAvatarMenuItem_Click"/>
                                <Separator/>
                                    <MenuItem Header="Выйти" Click="LogoutMenuItem_Click"/>
                            </ContextMenu>
                        </Border.ContextMenu>
                            <Border.Background>
                                <ImageBrush x:Name="TopBarProfileImage" Stretch="UniformToFill"/>
                            </Border.Background>
                    </Border>
                        <TextBlock x:Name="UserNameText" Text="Гость" Foreground="White" 
                                   FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Border x:Name="SidePanel" Width="300" Background="#f8f8f8" HorizontalAlignment="Left"
                           BorderBrush="#ddd" BorderThickness="0,0,1,0" Margin="-300,0,0,0" Panel.ZIndex="2">
                        <StackPanel Margin="10,20">
                            <TextBlock Text="Меню" FontSize="24" FontWeight="Bold" Margin="15,20,0,20"/>
                            <Button x:Name="YourQuestionsButtonMenu" Content="Ваши опросы" Click="YourQuestionsButton_Click"
                                    Style="{StaticResource MenuButtonStyle}"/>
                            <Button Content="Создать опрос" Click="CreateVoteButton_Click"
                                    Style="{StaticResource MenuButtonStyle}"/>
                            <Button Content="Шаблоны опросов" Click="TemplatesButton_Click"
                                    Style="{StaticResource MenuButtonStyle}"/>
                            <Button Content="Результаты тестов" Click="TestResultsButton_Click"
                                    Style="{StaticResource MenuButtonStyle}"/>
                            <Button Content="Настройки" 
                                    Style="{StaticResource MenuButtonStyle}"/>
                            <Button x:Name="ClosePanelButton" Content="Закрыть" Margin="0,30,0,5" 
                                    HorizontalAlignment="Center" Click="ClosePanelButton_Click"
                                    Style="{StaticResource GradientButtonStyle}"/>
                </StackPanel>
                    </Border>
                    <Grid Margin="20">
                <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Добро пожаловать в Голос.by!" 
                                  FontSize="32" FontWeight="Bold" Margin="0,20,0,30"/>

                        <!-- Основной контент -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <WrapPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
                                <Border Width="350" Height="220" Margin="15" Background="White" 
                                       BorderBrush="#ddd" BorderThickness="1" CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#ccc" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                                    </Border.Effect>
                                    <Grid Margin="25">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Создать новый опрос" 
                                                  FontSize="22" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="1" Text="Создайте собственный опрос, тест или голосование. Настройте его под свои нужды и поделитесь с другими." 
                                                  TextWrapping="Wrap" Margin="0,15" FontSize="15" Foreground="#555"/>
                                        <Button Grid.Row="2" Content="Создать опрос" 
                                               HorizontalAlignment="Left" Click="CreateVoteButton_Click"
                                               Style="{StaticResource GradientButtonStyle}"/>
                                    </Grid>
                                </Border>
                                <Border Width="350" Height="220" Margin="15" Background="White" 
                                       BorderBrush="#ddd" BorderThickness="1" CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#ccc" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                                    </Border.Effect>
                                    <Grid Margin="25">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Ваши опросы" 
                                                   FontSize="22" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="1" Text="Просмотрите, отредактируйте или удалите опросы, которые вы создали ранее." 
                                                   TextWrapping="Wrap" Margin="0,15" FontSize="15" Foreground="#555"/>
                                        <Button Grid.Row="2" Content="Посмотреть опросы" 
                                                HorizontalAlignment="Left" Click="YourQuestionsButton_Click"
                                                Style="{StaticResource GradientButtonStyle}"/>
                </Grid>
                            </Border>
                                <Border Width="350" Height="220" Margin="15" Background="White" 
                                       BorderBrush="#ddd" BorderThickness="1" CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#ccc" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                                    </Border.Effect>
                                    <Grid Margin="25">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Использовать шаблон" 
                                                  FontSize="22" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="1" Text="Выберите готовый шаблон опроса или теста из нашей коллекции. Сэкономьте время при создании опросов." 
                                                  TextWrapping="Wrap" Margin="0,15" FontSize="15" Foreground="#555"/>
                                        <Button Grid.Row="2" Content="Выбрать шаблон" 
                                               HorizontalAlignment="Left" Click="OpenTemplatesWindow_Click"
                                               Style="{StaticResource GradientButtonStyle}"/>
                                    </Grid>
                            </Border>
                            </WrapPanel>
                            <Border Grid.Row="1" Background="#f9f9f9" BorderBrush="#ddd" 
                                   BorderThickness="1" CornerRadius="8" Padding="30">
                                <StackPanel>
                                    <TextBlock Text="Последние обновления" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
                                    <TextBlock Text="• Добавлена возможность просмотра своих опросов" Margin="0,6" FontSize="15"/>
                                    <TextBlock Text="• Улучшен интерфейс создания опросов" Margin="0,6" FontSize="15"/>
                                    <TextBlock Text="• Добавлены шаблоны опросов" Margin="0,6" FontSize="15"/>
                                    <TextBlock Text="• Исправлены ошибки в работе системы" Margin="0,6" FontSize="15"/>
                                </StackPanel>
                            </Border>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
    
        <!-- Canvas для визуальных эффектов (волны и пузырьки) -->
        <Canvas x:Name="EffectCanvas" Panel.ZIndex="0" 
                Background="Transparent"
                IsHitTestVisible="False" Margin="-10,60,10,-60"/>
    </Grid>
</Window>