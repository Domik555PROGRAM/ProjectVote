<Window x:Class="Project_Vote.SearchResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Результаты поиска" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#f8f8f8">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Результаты поиска" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <ListView x:Name="TestsListView" Grid.Row="1" 
                  Background="White" BorderBrush="#ddd" BorderThickness="1"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Название" Width="280" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Автор" Width="150" DisplayMemberBinding="{Binding Author}"/>
                    <GridViewColumn Header="Дата создания" Width="150" DisplayMemberBinding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Действия" Width="220">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Пройти тест" 
                                        Background="#4A90E2" Foreground="White"
                                        Padding="10,5" Width="120" 
                                        Click="StartTest_Click"
                                        Tag="{Binding Id}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock x:Name="NoResultsText" Grid.Row="1" 
                   Text="По вашему запросу ничего не найдено" 
                   FontSize="18" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Visibility="Collapsed"/>

        <Button Grid.Row="2" Content="Закрыть" 
                HorizontalAlignment="Right" Margin="0,15,0,0"
                Padding="15,8" Background="#4A90E2" Foreground="White"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
