<Window x:Class="Project_Vote.SearchResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Результаты поиска" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#f8f8f8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Результаты поиска" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Выбор категории -->
            <ComboBox x:Name="CategoryComboBox" Grid.Column="0" Width="150" Margin="0,0,10,0"
                      SelectedIndex="0" SelectionChanged="CategoryComboBox_SelectionChanged">
                <ComboBoxItem Content="Все"/>
                <ComboBoxItem Content="Тесты"/>
                <ComboBoxItem Content="Голосования"/>
            </ComboBox>

            <!-- Поле поиска -->
            <Border Grid.Column="1" Background="White" BorderBrush="#ddd" 
                    BorderThickness="1" CornerRadius="4">
                <TextBox x:Name="SearchBox" Padding="10,8" FontSize="14" BorderThickness="0"
                         KeyDown="SearchBox_KeyDown"/>
            </Border>

            <!-- Кнопка поиска -->
            <Button Grid.Column="2" Margin="10,0,0,0" Content="Искать" 
                    Background="#4A90E2" Foreground="White" Padding="15,8"
                    Click="SearchAgain_Click"/>
        </Grid>

        <ListView x:Name="ItemsListView" Grid.Row="2" 
                  Background="White" BorderBrush="#ddd" BorderThickness="1"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView x:Name="ItemsGridView">
                    <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Название" Width="280" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="Автор" Width="150" DisplayMemberBinding="{Binding Author}"/>
                    <GridViewColumn Header="Дата создания" Width="150" DisplayMemberBinding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Действия" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding ActionButtonText}" 
                                        Background="#4A90E2" Foreground="White"
                                        Padding="10,5" 
                                        Click="StartItem_Click"
                                        Tag="{Binding Id}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock x:Name="NoResultsText" Grid.Row="2" 
                   Text="По вашему запросу ничего не найдено" 
                   FontSize="18" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Visibility="Collapsed"/>

        <Button Grid.Row="3" Content="Закрыть" 
                HorizontalAlignment="Right" Margin="0,15,0,0"
                Padding="15,8" Background="#4A90E2" Foreground="White"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
