<Window x:Class="Project_Vote.TestListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Доступные тесты" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#f0f0f0">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Доступные тесты" FontSize="24" FontWeight="Bold" 
                   Foreground="#0066cc" Margin="0,0,0,20"/>

        <ListView Grid.Row="1" x:Name="TestsListView" BorderThickness="1" BorderBrush="#ccc" Background="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" BorderBrush="#eee" BorderThickness="0,0,0,1" 
                            Padding="15" Margin="0,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="18" 
                                       FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                            
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Автор: " Foreground="#666"/>
                                <TextBlock Text="{Binding Author}" Foreground="#666" Margin="0,0,15,0"/>
                                <TextBlock Text="Создано: " Foreground="#666"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" Foreground="#666" Margin="0,0,15,0"/>
                                <TextBlock Text="Вопросов: " Foreground="#666"/>
                                <TextBlock Text="{Binding QuestionsCount}" Foreground="#666" Margin="0,0,15,0"/>
                                
                                <StackPanel Orientation="Horizontal" 
                                         Visibility="{Binding HasPassword, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="🔒" Foreground="#C71585" FontWeight="Bold" Margin="0,0,3,0"/>
                                    <TextBlock Text="Защищено паролем" Foreground="#C71585" FontSize="12" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Button Content="Пройти тест" Padding="15,8" Background="#0066cc" 
                                        Foreground="White" BorderThickness="0" Tag="{Binding Id}" 
                                        Click="StartTest_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                
                                <Button Content="Изменить" Padding="15,8" Background="#4CAF50" 
                                        Foreground="White" BorderThickness="0" Tag="{Binding Id}" 
                                        Click="EditTest_Click" Margin="10,0,0,0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="NoTestsText" Grid.Row="1" Text="В данный момент нет доступных тестов." 
                   FontSize="16" Foreground="#666" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Visibility="Collapsed"/>

        <Button Grid.Row="2" Content="Закрыть" HorizontalAlignment="Right" Margin="0,15,0,0" 
                Padding="20,10" Click="CloseButton_Click" Background="#0066cc" Foreground="White" 
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window> 