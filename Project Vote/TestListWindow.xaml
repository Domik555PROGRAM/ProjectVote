<Window x:Class="Project_Vote.TestListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Доступные тесты" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#f0f0f0">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Доступные тесты" FontSize="24" FontWeight="Bold" 
                   Foreground="#0066cc" Margin="0,0,0,20"/>

        <ListView Grid.Row="1" x:Name="TestsListView" BorderThickness="1" BorderBrush="#ccc" Background="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Заголовок и значок закрытого паролем теста -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
                                <TextBlock Text="🔒" Margin="5,0,0,0" FontSize="14" 
                                       Visibility="{Binding HasPassword, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                            
                            <!-- Тип опроса (тест или голосование) -->
                            <Border Grid.Row="0" Grid.Column="1" Background="#E6E6E6" CornerRadius="4" Padding="5,2" Margin="0,0,0,5">
                                <TextBlock Text="{Binding PollType}" FontSize="12" Foreground="#444"/>
                            </Border>
                            
                            <!-- Описание теста -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="{Binding Description}" TextWrapping="Wrap" 
                                       MaxHeight="60" Margin="0,5,0,10"/>
                            
                            <!-- Информация о тесте -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Автор: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Author}" Margin="0,0,15,0"/>
                                
                                <TextBlock Text="Вопросов: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding QuestionsCount}" Margin="0,0,15,0"/>
                                
                                <TextBlock Text="Создан: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}}"/>
                            </StackPanel>
                            
                            <!-- Кнопки действий -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Пройти" Tag="{Binding Id}" Click="StartTest_Click" Margin="0,0,5,0" 
                                        Width="100" Height="30"/>
                                <Button Content="Редактировать" Tag="{Binding Id}" Click="EditTest_Click" 
                                        Width="120" Height="30"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="NoTestsText" Grid.Row="1" Text="В данный момент нет доступных тестов." 
                   FontSize="16" Foreground="#666" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Visibility="Collapsed"/>

        <Button Grid.Row="2" Content="Закрыть" HorizontalAlignment="Right" Margin="0,15,0,0" 
                Padding="20,10" Click="CloseButton_Click" Background="#0066cc" Foreground="White" 
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window> 