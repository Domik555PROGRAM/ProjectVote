<Window x:Class="Project_Vote.Templatesxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Шаблоны опросов" Height="540" Width="800"
        FontFamily="Segoe UI">
    
    <Window.Resources>

        <Style x:Key="CategoryTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        

        <Style x:Key="CategoryPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryIconStyle" TargetType="Border">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Стиль для заголовков блоков -->
        <Style x:Key="BlockHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Стиль для ссылок на шаблоны -->
        <Style x:Key="TemplateItemStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>
        
        <!-- Стиль для текста ссылок -->
        <Style x:Key="TemplateLinkStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2D78CE"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Стиль для иконок ссылок -->
        <Style x:Key="LinkIconStyle" TargetType="Path">
            <Setter Property="Fill" Value="#2D78CE"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Data" Value="M16,8 L8,16 L7.3,15.3 L14.6,8 L7.3,0.7 L8,0 z"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок страницы -->
        <StackPanel Grid.Row="0" Margin="30,20,30,10">
            <TextBlock Text="Шаблоны голосований и тестов" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#333333" 
                       Margin="0,0,0,10"/>
            
            <TextBlock TextWrapping="Wrap" 
                       Margin="0,0,0,20" 
                       FontSize="16" 
                       Foreground="#666666">
                Выберите готовый шаблон для создания вашего голосования или теста. Используйте наши шаблоны для быстрого
                запуска с возможностью загрузки изображений и настройки под ваши нужды.
            </TextBlock>
        </StackPanel>
        
        <!-- Основной контент со скроллом -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Левая колонка - Тесты -->
                <StackPanel Grid.Column="0">
                    <!-- Тесты -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                           
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Тесты" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Викторина с картинками" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="test_image_quiz"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тест на знание логотипов" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="test_logo_knowledge"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Определение локаций по фотографиям" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="test_location_photos"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Проверка знаний с иллюстрациями" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="test_knowledge_illustrations"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тест на распознавание объектов" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="test_object_recognition"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Проверка внимательности по картинкам" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="test_attention_pictures"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- Правая колонка - Голосования -->
                <StackPanel Grid.Column="1">
                    <!-- Голосования -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                           
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Голосования" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Выбор фотографии" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="vote_best_photo"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Рейтинг дизайн-проектов" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="vote_design_projects"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Голосование за варианты логотипа" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="vote_logo_variants"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Выбор лучшего места для мероприятия" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="vote_event_location"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Оценка макетов продукции" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="vote_product_mockups"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Выбор новой униформы по фото" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"
                                               Tag="vote_uniform_choice"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
