<Window x:Class="Project_Vote.Templatesxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Шаблоны опросов" Height="800" Width="1200"
        FontFamily="Segoe UI">
    
    <Window.Resources>

        <Style x:Key="CategoryTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        

        <Style x:Key="CategoryPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryIconStyle" TargetType="Border">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Стиль для заголовков блоков -->
        <Style x:Key="BlockHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Стиль для ссылок на шаблоны -->
        <Style x:Key="TemplateItemStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>
        
        <!-- Стиль для текста ссылок -->
        <Style x:Key="TemplateLinkStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2D78CE"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Стиль для иконок ссылок -->
        <Style x:Key="LinkIconStyle" TargetType="Path">
            <Setter Property="Fill" Value="#2D78CE"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Data" Value="M16,8 L8,16 L7.3,15.3 L14.6,8 L7.3,0.7 L8,0 z"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок страницы -->
        <StackPanel Grid.Row="0" Margin="30,20,30,10">
            <TextBlock Text="Примеры опросов и шаблоны анкет" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#333333" 
                       Margin="0,0,0,10"/>
            
            <TextBlock TextWrapping="Wrap" 
                       Margin="0,0,0,20" 
                       FontSize="16" 
                       Foreground="#666666">
                Используйте профессиональные шаблоны анкет в имеющемся виде или редактируйте их, внося необходимые изменения.
                Шаблоны различных дизайнов опросов .
            </TextBlock>
        </StackPanel>
        
        <!-- Основной контент со скроллом -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Левая колонка -->
                <StackPanel Grid.Column="0">
                    <!-- Примеры анкет для сотрудников -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Иконка категории -->
                            <Border Style="{StaticResource CategoryIconStyle}" Background="#EBF5FF" Grid.Column="0">
                                <Image Source="/Resources/employee_icon.png" Width="32" Height="32"/>
                            </Border>
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Примеры анкет для сотрудников" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <!-- Трудоустройство -->
                                <TextBlock Text="Трудоустройство" FontWeight="SemiBold" Foreground="#444444" Margin="0,10,0,5"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Удовлетворенность процедурой приема на работу" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Шаблон опроса по онбордингу / адаптации персонала" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <!-- Лояльность/Вовлеченность/Мотивация -->
                                <TextBlock Text="Лояльность/Вовлеченность/Мотивация" FontWeight="SemiBold" Foreground="#444444" Margin="0,15,0,5"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Отношение к компании (опрос Липпонена)" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Уровень мотивации сотрудников" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тест на вовлеченность персонала (Gallup Q12)" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Удовлетворенность работой и вознаграждениями" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Удовлетворенность условиями труда с оценкой важности" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <!-- Уходящий сотрудник -->
                                <TextBlock Text="Уходящий сотрудник" FontWeight="SemiBold" Foreground="#444444" Margin="0,15,0,5"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос уходящего сотрудника" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <!-- Прочее -->
                                <TextBlock Text="Прочее" FontWeight="SemiBold" Foreground="#444444" Margin="0,15,0,5"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Корпоративная культура" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Диагностика аврала" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Оценка / самооценка -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Иконка категории -->
                            <Border Style="{StaticResource CategoryIconStyle}" Background="#FFF2E0" Grid.Column="0">
                                <Image Source="/Resources/evaluation_icon.png" Width="32" Height="32"/>
                            </Border>
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Оценка / самооценка" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Оценка Performance Review" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Оценка 90 градусов" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос 180 градусов для оценки руководителя" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- Средняя колонка -->
                <StackPanel Grid.Column="1">
                    <!-- Тесты -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Иконка категории -->
                            <Border Style="{StaticResource CategoryIconStyle}" Background="#E0F7FF" Grid.Column="0">
                                <Image Source="/Resources/test_icon.png" Width="32" Height="32"/>
                            </Border>
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Тесты" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тест: Контент и email-маркетинг" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тестирование: Английский язык, уровень Advanced" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тестирование: Английский язык, уровень Intermediate" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тест: Заполнение СЗВ-ТД" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тест: Отпуска и отпускные" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Тест по JavaScript для Middle-разработчика" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Шаблон Теста Холла" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Индекс жизненной удовлетворенности (ИЖУ)" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Опросы -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Иконка категории -->
                            <Border Style="{StaticResource CategoryIconStyle}" Background="#F0E7FF" Grid.Column="0">
                                <Image Source="/Resources/survey_icon.png" Width="32" Height="32"/>
                            </Border>
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Опросы" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос по оценке эффективности рекламной кампании" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос по выбору дизайна и характеристикам продукта" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос после посещения магазина" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос по оценке дизайна упаковки" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- Правая колонка -->
                <StackPanel Grid.Column="2">
                    <!-- Голосования -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Иконка категории -->
                            <Border Style="{StaticResource CategoryIconStyle}" Background="#E3FFED" Grid.Column="0">
                                <Image Source="/Resources/vote_icon.png" Width="32" Height="32"/>
                            </Border>
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Голосования" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Оценка изображения" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Выбор лучшего изображения" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Анкета обратной связи после мероприятия" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Обратная связь после корпоративного мероприятия" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Оценка спикера на конференции" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Голосование по переизбранию руководящих должностных лиц" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Анкета регистрации на мероприятие" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Разное -->
                    <Border Style="{StaticResource CategoryPanelStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Иконка категории -->
                            <Border Style="{StaticResource CategoryIconStyle}" Background="#FFF0F0" Grid.Column="0">
                                <Image Source="/Resources/misc_icon.png" Width="32" Height="32"/>
                            </Border>
                            
                            <!-- Содержимое категории -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Разное" Style="{StaticResource BlockHeaderStyle}"/>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос для выпускников университета" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Опрос студентов для оценки преподавателей ВУЗа" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Удовлетворенность студентов ВУЗа" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource TemplateItemStyle}">
                                    <Path Style="{StaticResource LinkIconStyle}"/>
                                    <TextBlock Text="Оценка удовлетворенности пациента" 
                                               Style="{StaticResource TemplateLinkStyle}"
                                               MouseDown="Template_MouseDown"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
