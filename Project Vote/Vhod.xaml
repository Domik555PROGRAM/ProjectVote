<Window x:Class="Project_Vote.Vhod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Vote"
        mc:Ignorable="d"
        Title="Вход" Height="500" Width="400"
        MinWidth="400" MaxWidth="1920"
        MinHeight="500" MaxHeight="1080"
        WindowStartupLocation="CenterScreen"
        Background="#FF2196F3">

    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3AFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#5AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки входа -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2196F3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFBBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="40,80,40,0">
            <TextBlock Text="Вход" 
                     FontSize="32" 
                     FontWeight="Bold" 
                     Foreground="White" 
                     HorizontalAlignment="Center"
                     Margin="0,0,0,50"/>

            <!-- Email -->
            <TextBlock Text="Email:" 
                     Foreground="White" 
                     FontSize="14"
                     Margin="0,0,0,6"/>
            <TextBox x:Name="EmailTextBox"
                     Style="{StaticResource FormTextBoxStyle}"
                     ToolTip="Введите email"/>
            <TextBlock x:Name="EmailErrorText"
                     Foreground="#FFFFD54F"
                     FontSize="12"
                     Margin="0,2,0,0"
                     Visibility="Collapsed"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль:" 
                     Foreground="White" 
                     FontSize="14"
                     Margin="0,15,0,5"/>
            <Grid>
                <PasswordBox x:Name="PasswordBox"
                            Background="#1AFFFFFF"
                            Foreground="White"
                            BorderBrush="#3AFFFFFF"
                            BorderThickness="1"
                            Padding="10,5"
                            Margin="0,5"
                            FontSize="14"
                            PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBox x:Name="PasswordVisibleBox"
                         Style="{StaticResource FormTextBoxStyle}"
                         Visibility="Collapsed"
                         TextChanged="PasswordVisibleBox_TextChanged"/>
                <Button x:Name="TogglePasswordButton"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,5,5,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Opacity="0.7"
                        Click="TogglePasswordButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="👁️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCFFFFFF"/>
                </Button>
            </Grid>
            <TextBlock x:Name="PasswordErrorText"
                     Foreground="#FFFFD54F"
                     FontSize="12"
                     Margin="0,2,0,0"
                     Visibility="Collapsed"/>

            <!-- Кнопка входа -->
            <Button Content="Войти"
                    Style="{StaticResource LoginButtonStyle}"
                    Click="LoginButton_Click"/>

            <!-- Ссылка на регистрацию -->
            <TextBlock Margin="0,20,0,0"
                      HorizontalAlignment="Center">
                <Hyperlink x:Name="RegisterLink"
                          Foreground="White"
                          TextDecorations="None"
                          Click="RegisterLink_Click">
                    Нет аккаунта? Зарегистрируйтесь
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
